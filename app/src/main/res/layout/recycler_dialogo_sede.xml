<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/cod"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/txtCodigo"
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txtVcod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/des"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="DescripciÃ³n"
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txtVdes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pre"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:text="Precio"
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txtVpre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dispo"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:text="Disponible"
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txtVdispo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tipoProducto"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:text="Tipo de producto"
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txtVtipoProducto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>